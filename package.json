{
  "name": "arweave-deploy",
  "version": "1.0.0",
  "description": "arweave-deploy",
  "main": "dist/arweave",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mime": "^2.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/promptly": "^1.1.28",
    "arweave": "^1.1.2",
    "chai": "^4.2.0",
    "commander": "^2.19.0",
    "mime": "^2.4.0",
    "mocha": "^5.2.0",
    "pkg": "^4.3.5",
    "promptly": "^3.0.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "webpack": "^4.28.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.1"
  },
  "scripts": {
    "build": "npx webpack && chmod +x dist/arweave",
    "package": "npx webpack && chmod +x dist/arweave && npx pkg dist/arweave --targets node10-linux-x64 --out-path dist/bin/linux && npx pkg dist/arweave --targets node10-macos-x64 --out-path dist/bin/macos && npx pkg dist/arweave --targets node10-win-x64 --out-path dist/bin/windows",
    "test": "mocha --require ts-node/register test/*.ts"
  },
  "bin": {
    "arweave": "dist/arweave"
  },
  "targets": {
    "node": "8.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArweaveTeam/arweave-deploy.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ArweaveTeam/arweave-deploy/issues"
  },
  "homepage": "https://github.com/ArweaveTeam/arweave-deploy#readme"
}
